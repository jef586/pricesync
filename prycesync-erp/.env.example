# =============================================================================
# PRICESYNC ERP - ENVIRONMENT VARIABLES
# =============================================================================
# Copia este archivo como .env y configura los valores seg√∫n tu entorno

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/pricesync"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=pricesync

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3001
FRONTEND_PORT=5173

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key
REFRESH_TOKEN_EXPIRES_IN=30d

# Bcrypt rounds for password hashing
BCRYPT_ROUNDS=12

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=combined

# =============================================================================
# REDIS (CACHE & SESSIONS) - OPCIONAL
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# EMAIL CONFIGURATION - OPCIONAL
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@pricesync.com

# =============================================================================
# FISCAL INTEGRATIONS - OPCIONAL
# =============================================================================
# Argentina - AFIP
AFIP_CUIT=
AFIP_CERT_PATH=
AFIP_KEY_PATH=
AFIP_PRODUCTION=false

# Paraguay - SIFEN
SIFEN_RUC=
SIFEN_API_KEY=
SIFEN_PRODUCTION=false

# Bolivia - Sistema Virtual
BOLIVIA_NIT=
BOLIVIA_API_KEY=
BOLIVIA_PRODUCTION=false

# =============================================================================
# AI SERVICES - OPCIONAL
# =============================================================================
OPENAI_API_KEY=
GOOGLE_VISION_API_KEY=

# =============================================================================
# ECOMMERCE INTEGRATIONS - OPCIONAL
# =============================================================================
MERCADOLIBRE_CLIENT_ID=
MERCADOLIBRE_CLIENT_SECRET=
MERCADOLIBRE_ACCESS_TOKEN=

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Prisma Studio
PRISMA_STUDIO_PORT=5555

# Vite HMR
VITE_HMR_PORT=24678

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Display para aplicaciones GUI en Docker (Linux)
DISPLAY=:0
XAUTHORITY=/tmp/.docker.xauth