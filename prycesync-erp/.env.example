# Database Configuration
DATABASE_URL="postgresql://postgres:password@db:5432/pricesync"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=pricesync

# Redis Configuration (opcional para cache y sesiones)
REDIS_URL="redis://redis:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN="24h"
REFRESH_EXPIRES_IN="7d"

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL="http://localhost:5173"

# AFIP Configuration (para facturación electrónica)
AFIP_CERT_PATH=""
AFIP_KEY_PATH=""
AFIP_CUIT=""
AFIP_PRODUCTION=false

# MercadoLibre API (para integración)
ML_CLIENT_ID=""
ML_CLIENT_SECRET=""
ML_REDIRECT_URI=""

# Email Configuration (para notificaciones)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM=""

# File Upload Configuration
MAX_FILE_SIZE="10mb"
UPLOAD_PATH="./uploads"

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"