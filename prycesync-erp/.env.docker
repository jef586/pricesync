# Configuración de la base de datos para Docker
DATABASE_URL="postgresql://postgres:password@db:5432/pricesync"

# Configuración de PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=pricesync

# Configuración JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Configuración del servidor
NODE_ENV=development
PORT=3002
API_PORT=3002
FRONTEND_PORT=5173

# URLs de conexión
FRONTEND_URL=http://localhost:5173
API_URL=http://localhost:3002
# URL del API para el frontend (Vite expone solo variables que empiezan con VITE_)
VITE_API_URL=http://localhost:3002
# Flag para alias temporal de Product → Article (true deshabilita el alias)
VITE_FEATURE_PRODUCTS_ALIAS=false

# Redis y cache enriquecimiento
REDIS_URL=redis://redis:6379
ENRICH_CACHE_TTL_SECONDS=3600

# Proveedor de padrón (afip|mock)
PADRON_PROVIDER=afip
TUSFACTURASAPP_API_URL=
TUSFACTURASAPP_API_KEY=

# Configuración de CORS
CORS_ORIGIN=http://localhost:5173,http://127.0.0.1:5173

# Configuración de logs
LOG_LEVEL=debug

# Entorno AFIP (prod|homo). Usa 'homo' para homologación.
AFIP_ENV=homo
AFIP_SERVICE=ws_sr_padron_a5
AFIP_CUIT_REPRESENTADA=20291113673
AFIP_CERT_PATH=/app/secrets/afip/afip.cert.pem
AFIP_KEY_PATH=/app/secrets/afip/afip.key.pem
# 24h para cache TA
AFIP_CACHE_TTL_S=86400

# =====================
# IA Chat Configuration
# =====================
OPENAI_API_KEY=
AI_PROVIDER=openai
AI_MAX_TOKENS=300
# Exponer proveedor a la UI (Vite)
VITE_AI_PROVIDER=openai

# =====================
# Assets configuration
# =====================
# Directorio host para assets montado en /app/assets dentro del contenedor.
# Por defecto usa carpeta local ./.assets. Puedes personalizar por OS:
# Windows: ASSETS_HOST_DIR=C:\\Users\\<usuario>\\AppData\\Roaming\\Facturacion\\assets
# Linux:   ASSETS_HOST_DIR=/home/<usuario>/.config/Facturacion/assets
# macOS:   ASSETS_HOST_DIR=/Users/<usuario>/Library/Application Support/Facturacion/assets
ASSETS_HOST_DIR=./.assets