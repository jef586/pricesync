{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@ui/*": ["../../../src/renderer/src/components/*"],
      "@tokens/*": ["../../../src/renderer/src/styles/*"],
      "@shared/*": ["../../../src/shared/*"]
    }
  }
}